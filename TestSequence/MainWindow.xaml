<Window x:Class="TestSequence.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,4" HorizontalAlignment="Left" Width="790">

        <!-- First Stylish TextBox -->
        <Border CornerRadius="10" 
                Background="White" 
                BorderBrush="#007ACC" 
                BorderThickness="2" 
                Margin="50,80,450,280"
                Effect="{DynamicResource DropShadowEffect}">
            <TextBox Name="myTextBox"
                     Text="select T-eax file"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="#007ACC"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Left"
                     />
        </Border>

        <!-- Second Stylish TextBox -->
        <Border CornerRadius="10" 
                Background="White" 
                BorderBrush="#007ACC" 
                BorderThickness="2" 
                Margin="50,240,450,130"
                Effect="{DynamicResource DropShadowEffect}">
            <TextBox Name="myTextBox1"
                     Text="select ST file"
                     FontSize="18"
                     FontWeight="SemiBold"
                     Foreground="#007ACC"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="10"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Left"
                     />
        </Border>

        <Button Name="myButton"
        Content="Browse"
        Width="120"
        Height="40"
        Margin="470,80,160,280"
        Background="#007ACC"
        Foreground="White"
        FontWeight="Bold"
        BorderBrush="Transparent"
        Click="myButton_Click"/>
        <Button Name="myButton1"
Content="Browse"
Width="120"
Height="40"
Margin="495,252,185,142"
Background="#007ACC"
Foreground="White"
FontWeight="Bold"
BorderBrush="Transparent"
Click="myButton1_Click"/>
        <Button Name="myButton2"
Content="Submit"
Width="120"
Height="40"
Margin="320,344,360,50"
Background="#007ACC"
Foreground="White"
FontWeight="Bold"
BorderBrush="Transparent"
Click="myButton2_Click"/>
        <!-- Third Stylish TextBox -->
        <Border CornerRadius="10" 
        Background="White" 
        BorderBrush="#007ACC" 
        BorderThickness="2" 
        Margin="50,160,450,205"
        Effect="{DynamicResource DropShadowEffect}">
            <TextBox Name="myTextBox2"
             Text="select Config file"
             FontSize="18"
             FontWeight="SemiBold"
             Foreground="#007ACC"
             Background="Transparent"
             BorderThickness="0"
             Padding="10"
             VerticalContentAlignment="Center"
             HorizontalContentAlignment="Left"/>
        </Border>

        <!-- Third Browse Button -->
        <Button Name="myButton3"
        Content="Browse"
        Width="120"
        Height="40"
        Margin="470,160,160,205"
        Background="#007ACC"
        Foreground="White"
        FontWeight="Bold"
        BorderBrush="Transparent"
        Click="myButton3_Click"/>



        <!-- Drop Shadow Effect Resource -->
        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect"
                              Color="Black"
                              Direction="320"
                              ShadowDepth="5"
                              Opacity="0.3"
                              BlurRadius="10"/>
        </Grid.Resources>


    </Grid>
</Window>
